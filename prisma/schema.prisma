// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id_category Int        @id @default(autoincrement())
  name        String     @db.VarChar(30)
  products    Products[]
}

model Products {
  id_products Int           @id @default(autoincrement())
  category    Category      @relation(fields: [id_category], references: [id_category])
  id_category Int
  title       String        @db.VarChar(50)
  price       Int
  location    String        @db.VarChar(50)
  description String        @db.VarChar(500)
  benefits    String        @db.VarChar(2000)
  thumbnail   String        @db.VarChar(300)
  images      String        @db.VarChar(2000)
  transaction Transaction[]
}

model Customers {
  id_customers Int           @id @default(autoincrement())
  nama         String        @db.VarChar(50)
  email        String        @db.VarChar(50)
  no_tlpn      String        @db.VarChar(15)
  pesan        String        @db.VarChar(2000)
  transaction  Transaction[]
}

model Transaction {
  id_transaction   Int       @id @default(autoincrement())
  customers        Customers @relation(fields: [id_customers], references: [id_customers])
  id_customers     Int
  products         Products  @relation(fields: [id_products], references: [id_products])
  id_products      Int
  date_transaction DateTime
  customer_count   Int
  price            Int
  total_price      Int
}

model Admin {
  id_admin Int    @id @default(autoincrement())
  username String @db.VarChar(30)
  password String @db.VarChar(30)
}
